---
import Logo from "../components/Logo.astro"
---

<div id="start" class="container">
  <span class="title">ACM WEB</span>
  <div class="start-container">
    <a href="#about" class="start-button">
      Start
    </a>
  </div>
  <Logo/>
  <div class="float f1">&ltdiv&gt</div>
  <div class="float f2">&ltnav&gt</div>
  <div class="float f3">&ltsection&gt</div>
  <div class="float f4">&ltp1&gt</div>
  <div class="float f5">&ltp2&gt</div>
  <div class="float f6">&ltbody&gt</div>
  <div class="float f7">&lth1&gt</div>
  <div class="float f8">&lta&gt</div>
</div>

<style>
  .container {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    height: 100vh;
  }
  .title {
    line-height: 0;
    font-size: 201.56px;
    font-weight: 400;
    line-height: 241.88px;
    letter-spacing: 0.01em;
    text-align: center;
    text-decoration-skip-ink: none;
  }
  .start-container{
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .start-button{
      width: 330px;
      height: 100px;
      font-family: 'Oswald';
      border-radius: 50px;
      font-size: 72px;
      font-weight: bold;
      color: #FFFBFB;
      background-image: linear-gradient(#683B5C, #312646);
      border-style: none;
      text-shadow: 2px 2px 2.5px black;
      box-shadow: 5px, 5px, 3px black;
      letter-spacing: 1px;
      display: flex;
      align-items: center;
      justify-content: center;
      text-decoration: none;
      line-height: 0;
      margin-bottom: .5em;
  }
  .start-button:active{
      filter: brightness(85%);
  }
  .start-button:hover{
      filter: brightness(85%);
  }
  .float {
    position: absolute;
    animation: float 4s ease-in-out infinite;
    color: white;
    font-size: xx-large;
    font-weight: lighter;
  }
  .f1 { top: 30vh; left: 20vw; animation: float 4.1s ease-in-out infinite; }
  .f2 { top: 80vh; left: 60vw; animation: float 4.2s ease-in-out infinite; }
  .f3 { top: 20vh; left: 80vw; animation: float 4.3s ease-in-out infinite; }
  .f4 { top: 90vh; left: 30vw; animation: float 4.4s ease-in-out infinite; }
  .f5 { top: 10vh; left: 60vw; animation: float 4.5s ease-in-out infinite; }
  .f6 { top: 60vh; left: 80vw; animation: float 4.6s ease-in-out infinite; }
  .f7 { top: 60vh; left: 10vw; animation: float 4.7s ease-in-out infinite; }
  .f8 { top: 10vh; left: 15vw; animation: float 4.8s ease-in-out infinite; }
  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
</style>