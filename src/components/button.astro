---
interface Props {
  label: string;
}

const { label } = Astro.props;
---

<div id="ButtonContainer">
  <a id="startButton">
    {label}
  </a>
</div>

<style>
#startButton{
    width: 330px;
    height: 100px;
    font-family: 'Oswald';
    border-radius: 50px;
    font-size: 45px;
    font-weight: bold;
    color: #FFFBFB;
    background-image: linear-gradient(#683B5C, #312646);
    border-style: none;
    text-shadow: 2px 2px 2.5px black;
    box-shadow: 5px, 5px, 3px black;
    letter-spacing: 1px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
}

#startButton:active{
    filter: brightness(85%);
    cursor: pointer;

}

#startButton:hover{
    filter: brightness(85%);
    cursor: pointer;
}
#ButtonContainer{
    display: flex;
    justify-content: center;
    align-items: center;
}
</style>
