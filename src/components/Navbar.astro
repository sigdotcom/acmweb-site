---
import InteractiveLogo from "./Interactive_Logo.astro";

interface Props {}
---

<div id="navbar-container" class="container">
  <div class="logo-container">
    <InteractiveLogo />
    <a href="/acmweb-site/#start">ACM WEB</a>
  </div>
  <div class="tab-container">
    <a href="/acmweb-site/#about">About</a>
    <a href="/acmweb-site/#contact">Contact</a>
    <a class="join-tab" href="/acmweb-site/#join">Join Now</a>
  </div>
</div>

<style>
  .container {
    position: fixed;
    top: 1vh;
    left: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    width: 90vw;
    color: #fffbfb;
    font-weight: 400;
    margin-left: 5vw;
    z-index: 40;
  }
  a {
    text-decoration: none;
  }
  .logo-container {
    display: flex;
    flex: 1;
    align-items: center;
    justify-content: start;
    font-size: clamp(16px, 5vw, 72px);
    overflow: hidden;
  }
  .logo-container a {
    color: #e7e6f6;
    font-weight: 500;
    text-shadow: 0px 4px 4px #00000040;
    margin-left: 3vw;
  }
  .tab-container {
    display: flex;
    flex: 1;
    align-items: center;
    justify-content: end;
    font-size: clamp(14px, 4vw, 44px);
  }
  .tab-container a {
    margin: 0 0.75vw;
    color: #fffbfb;
    text-shadow: 0px 2.69px 2.69px #0000004d;
  }
  .tab-container a.join-tab {
    color: #5d5bc5;
  }
</style>
